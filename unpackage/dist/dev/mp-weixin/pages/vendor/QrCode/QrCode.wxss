/* 水平间距 */
.content {
  padding-bottom: 20rpx;
}
.content .btTab {
  position: relative;
  z-index: 1;
  width: 100%;
  height: 250px;
  background-color: #fff;
}
.content .btTab .boothImg {
  display: block;
  width: 100%;
}
.content .boothBG {
  position: relative;
  z-index: 1;
  width: 100%;
  display: block;
}
.content .list {
  position: relative;
  width: 96%;
  padding-left: 4%;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.content .list .row {
  widows: 100%;
  min-height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: solid 1rpx #eee;
}
.content .list .row:last-child {
  border-bottom: none;
}
.content .list .row .title {
  font-size: 36rpx;
  color: #333;
}
.content .list .row .left {
  margin-left: 20px;
}
.content .list .row .right {
  margin-right: 20px;
  color: #999;
}
.option {
  display: flex;
  /* margin-top: 4%; */
  margin-left: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: #cecece solid 0.5rpx;
}
.msg-left {
  flex: 5;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.msg-right {
  flex: 2;
  display: flex;
  justify-content: center;
  text-align: center;
  margin-right: 15rpx;
  border-bottom: #000000 solid 0.5rpx;
}
.IdImg {
  display: block;
  margin-left: 10%;
  margin-bottom: 10px;
  width: 80%;
}
.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn {
  margin-top: 10px;
  background-color: #4f99ff;
  border-radius: 30px;
  width: 60%;
  color: white;
  font-size: 1.2em;
  height: 100%;
  box-shadow: 0 1px 2px 0 #3263a3;
  border: 1px solid #4f99ff;
}
.user-card {
  height: 170rpx;
  padding: 0 15px;
}
.user-card .card {
  position: relative;
  bottom: 100px;
  height: 300rpx;
  background-color: white;
  border-radius: 5px;
  z-index: 10;
  box-shadow: 0 1px 2px 0 #e4e7ef;
  background-color: #ffffff;
  border: 1px solid #ffffff;
}
.user-card .card .title {
  font-size: 48rpx;
  font-family: "Arial", "Microsoft YaHei", "黑体", "宋体", sans-serif;
  font-weight: bold;
  color: #333;
  text-align: center;
}
.user-card .card .text {
  font-size: 28rpx;
  font-family: "Arial", "Microsoft YaHei", "黑体", "宋体", sans-serif;
  color: #777;
  text-align: center;
}
.user-card .card .top {
  height: 30%;
  position: relative;
}
.user-card .card .top .userImage {
  position: absolute;
  bottom: 24%;
  left: 10%;
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 2px solid white;
}
.user-card .card .top .userImage image {
  width: 100%;
}
.user-card .card .bottom {
  display: flex;
  height: 70%;
}
.user-card .card .bottom .left {
  width: 80%;
  height: 100%;
  position: relative;
}
.user-card .card .bottom .left .user-text {
  width: 100%;
  font-size: 1.6em;
  padding-left: 80rpx;
  height: 50%;
}
.user-card .card .bottom .left .user-phone {
  color: #96a1ae;
  padding-left: 80rpx;
  height: 50%;
  width: 100%;
  font-size: 0.9em;
}
.user-card .card .bottom .right {
  width: 20%;
  height: 50%;
}